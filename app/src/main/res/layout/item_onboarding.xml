<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lottie_loop="true"
        android:layout_marginTop="36dp"
        android:layout_constraintWidth_percent="0.4"
        android:layout_constraintDimensionRatio="1:1"
        android:layout_constraintLeft_toLeftOf="parent"
        android:layout_constraintRight_toRightOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:lottie_rawRes="raw/cool_animation"
        android:lottie_autoPlay="true"/>


    <TextView
        android:id="@+id/tv_title"
        android:text="Have a good time"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#2F2E3E"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="You should take the time to help those \n who need you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_get_started"
        android:layout_marginTop="20dp"
        android:text="Get Started"
        android:textSize="20sp"
        android:backgroundTint="#6D64FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>